<Window x:Class="Banana_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banana_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="New File"></MenuItem>
                    <MenuItem Header="Save"></MenuItem>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Cut" Command="ApplicationCommands.Cut"></MenuItem>
                </MenuItem>
            </Menu>
        
        <TabControl x:Name="tabControl" >
                <TabItem Header="Node" Width="100">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Edit" Width="100">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </StackPanel>       
    </Grid>
</Window>
