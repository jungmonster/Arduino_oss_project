<Window x:Class="Banana_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banana_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="New File"></MenuItem>
                    <MenuItem Header="Save"></MenuItem>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Cut" Command="ApplicationCommands.Cut"></MenuItem>
                </MenuItem>
            </Menu>
        
        <TabControl x:Name="tabControl" >
                <TabItem Header="Node" Width="100" >
                    <DockPanel Name="NodeDock">
                        <Border DockPanel.Dock="Left" Width="100" Height="400" Background="PaleGreen" BorderThickness="1" BorderBrush="Black" >
                            <TextBlock Text="Dock = Left"  />
                        </Border>
                        <Border Background="White" BorderThickness="1" BorderBrush="Black" >
                            <TextBlock Text="This content will Fill the remaining space"  />
                        </Border>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Edit" Width="100">
                    <TextBox Name="CodeView" Height="450" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" ></TextBox>
                </TabItem>
            </TabControl>
        </StackPanel>       
    </Grid>
</Window>
