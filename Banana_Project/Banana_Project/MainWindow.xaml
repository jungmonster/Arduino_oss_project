<Window x:Class="Banana_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banana_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <StackPanel>
            <TabControl x:Name="tabControl" >
                <TabItem Header="Node" Width="100" >
                    <Grid x:Name="GridList" Background="Beige" ShowGridLines="True">
                        <!--List 비율을 1:5로 맞춤-->                  
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".9*" />
                            <RowDefinition Height=".1*" />
                        </Grid.RowDefinitions>
                        <ListBox x:Name="NodeList" Grid.Column="0" Grid.Row="0" PreviewMouseLeftButtonDown="NodeListView_MouseDown">
                            
                        </ListBox>
                        <ListView x:Name="CodeNodeList" Grid.Column="1" AllowDrop="True" Drop="CodeNode_Drop">
                            <Button Content="test"/>
                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="Code Block" Width="100">
                    <TextBox Name="CodeView" Width ="700" Height="450" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </TabItem>
            </TabControl>

        </StackPanel>
    </Grid>
</Window>
